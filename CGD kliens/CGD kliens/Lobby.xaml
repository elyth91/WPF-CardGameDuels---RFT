        <ListBox Margin="23,19,296,21" Name="YourListBox" Background="LavenderBlush">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding}" />
